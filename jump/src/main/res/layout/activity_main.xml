<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exercise.person.myapplication.MainActivity">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="15dp">
        <!--账号-->
        <EditText
            android:id="@+id/username_edit"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="输入账号"
            android:singleLine="true"
            android:inputType="text"/>
        <!--密码-->
        <EditText
            android:id="@+id/password_edit"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="输入密码"
            android:layout_below="@+id/username_edit"
            android:singleLine="true"
            android:inputType="textPassword" />
        <!--确定按钮-->
        <Button
            android:id="@+id/ok_button"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/password_edit"
            android:layout_marginEnd="10dp"
            android:text="确定" />
        <!--取消按钮-->
        <Button
            android:id="@+id/cancle_button"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/ok_button"
            android:layout_alignBottom="@+id/ok_button"
            android:text="取消" />

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="注册账号"
            android:layout_below="@+id/password_edit"
            android:layout_toEndOf="@+id/cancle_button"
            android:layout_marginStart="40dp"

            android:background="@null"/>
    </RelativeLayout>
</RelativeLayout>
